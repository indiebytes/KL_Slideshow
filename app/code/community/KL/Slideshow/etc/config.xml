<?xml version="1.0"?>
<config>
    <modules>
        <KL_Slideshow>
            <version>0.1.1</version>
        </KL_Slideshow>
    </modules>
    <global>
        <resources>
            <slideshow_setup>
                <setup>
                    <module>KL_Slideshow</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </slideshow_setup>
        </resources>
        <models>
            <slideshow>
                <class>KL_Slideshow_Model</class>
                <resourceModel>slideshow_mysql4</resourceModel>
            </slideshow>
            <slideshow_mysql4>
                <class>KL_Slideshow_Model_Mysql4</class>
                <entities>
                    <slideshow>
                        <table>slideshow</table>
                    </slideshow>
                    <slide>
                        <table>slide</table>
                    </slide>
                    <slide_store>
                        <table>slide_store</table>
                    </slide_store>
                    <slideshow_store>
                        <table>slideshow_store</table>
                    </slideshow_store>
                </entities>
            </slideshow_mysql4>
        </models>
        <blocks>
            <slideshow>
                <class>KL_Slideshow_Block</class>
            </slideshow>
        </blocks>
        <helpers>
            <slideshow>
                <class>KL_Slideshow_Helper</class>
            </slideshow>  
        </helpers>
    </global>
    <frontend>
        <routers>
            <slideshow>
                <use>standard</use>
                <args>
                    <module>KL_Slideshow</module>
                    <frontName>slideshow</frontName>
                </args>
            </slideshow>
        </routers>
    </frontend>
    <admin>
        <routers>
            <slideshow>
                <use>admin</use>
                <args>
                    <module>KL_Slideshow</module>
                    <frontName>slideshow</frontName>
                </args>
            </slideshow>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <cms>
                <children>
                    <slideshow_adminform translate="title" module="slideshow">
                        <title>Slideshows</title>
                        <action>slideshow/admin</action>
                        <sort_order>25</sort_order>
                    </slideshow_adminform>
                </children>
            </cms>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <cms>
                            <children>
                                <slideshow>
                                    <title>Slideshows</title>
                                    <sort_order>30</sort_order>
                                </slideshow>
                            </children>
                        </cms>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <slideshow>
                    <file>slideshow.xml</file>
                </slideshow>
            </updates>
        </layout>
    </adminhtml>
</config>
