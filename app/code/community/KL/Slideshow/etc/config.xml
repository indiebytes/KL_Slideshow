<?xml version="1.0"?>
<config>
    <modules>
        <KL_Slideshow>
            <version>0.2.0</version>
        </KL_Slideshow>
    </modules>
    <global>
        <resources>
            <slideshow_setup>
                <setup>
                    <module>KL_Slideshow</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </slideshow_setup>
        </resources>
        <models>
            <slideshow>
                <class>KL_Slideshow_Model</class>
                <resourceModel>slideshow_mysql4</resourceModel>
            </slideshow>
            <slideshow_mysql4>
                <class>KL_Slideshow_Model_Mysql4</class>
                <entities>
                    <slideshow>
                        <table>slideshow</table>
                    </slideshow>
                    <slide>
                        <table>slide</table>
                    </slide>
                    <slide_store>
                        <table>slide_store</table>
                    </slide_store>
                    <slideshow_store>
                        <table>slideshow_store</table>
                    </slideshow_store>
                    <slideshow_slide>
                        <table>slideshow_slide</table>
                    </slideshow_slide>
                </entities>
            </slideshow_mysql4>
        </models>
        <blocks>
            <slideshow>
                <class>KL_Slideshow_Block</class>
            </slideshow>
        </blocks>
        <helpers>
            <slideshow>
                <class>KL_Slideshow_Helper</class>
            </slideshow>
        </helpers>
    </global>
    <frontend>
        <routers>
            <slideshow>
                <use>standard</use>
                <args>
                    <module>KL_Slideshow</module>
                    <frontName>slideshow</frontName>
                </args>
            </slideshow>
        </routers>
    </frontend>
    <admin>
        <routers>
            <slideshow>
                <use>admin</use>
                <args>
                    <module>KL_Slideshow</module>
                    <frontName>slideshow</frontName>
                </args>
            </slideshow>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <cms>
                <children>
                    <slideshow_root translate="title" module="slideshow">
                        <title>Slideshows</title>
                        <action>slideshow/slideshow</action>
                        <sort_order>25</sort_order>
                        <children>
                            <slideshow translate="title" module="slideshow">
                                <title>Slideshows</title>
                                <action>slideshow/slideshow</action>
                                <sort_order>10</sort_order>
                            </slideshow>
                            <slide translate="title" module="slideshow">
                                <title>Slides</title>
                                <action>slideshow/slide</action>
                                <sort_order>20</sort_order>
                            </slide>
                        </children>
                    </slideshow_root>
                </children>
            </cms>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <cms>
                            <children>
                                <slideshow_root  translate="title" module="slideshow">
                                    <title>Slideshows</title>
                                    <sort_order>25</sort_order>
                                    <children>
                                        <slideshow translate="title" module="slideshow">
                                            <title>Slideshows</title>
                                            <sort_order>10</sort_order>
                                        </slideshow>
                                        <slide translate="title" module="slideshow">
                                            <title>Slides</title>
                                            <sort_order>20</sort_order>
                                        </slide>
                                    </children>
                                </slideshow_root>
                            </children>
                        </cms>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <kl_slideshow translate="title" module="slideshow">
                                            <title>Slideshow</title>
                                            <sort_order>9999</sort_order>
                                        </kl_slideshow>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <slideshow>
                    <file>slideshow.xml</file>
                </slideshow>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <kl_slideshow>
            <kl_slideshow_settings>
                <sizes>default</sizes>
                <styles>default</styles>
                <templates>default</templates>
            </kl_slideshow_settings>
        </kl_slideshow>
    </default>
</config>
